<div class="content-inner">

	{{#each announcements}}
	<div class="announcement-banner badge-background" data-id="{{id}}">
		<div>
			<p class="subtitle secondary">On {{readableDate}}, The Creator said...</p>
			<p class="info">{{message}}</p>
		</div>
		{{#if dismissable}}
		<div>
			<div class="remove-announcement">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-circle"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>
			</div>
		</div>
		{{/if}}
	</div>
	{{/each}}

	<h1 class="title">manoos</h1>
	<p>manoos is a manga-reader web app built by <a href="https://jipfr.nl" target="_blank" class="anchor">Jip Fr</a>. The source code is available <a href="https://github.com/virgel1995/manga-scraper" target="_blank" class="anchor">here</a>.</p>

	{{#if reading}}
	<section class="section continue-reading" data-list-id="continue-reading" data-list-type="list">
		<h2 class="sub-title spread do-spread"><span>Continue reading</span> {{> list-type }}</h2>
		<div class="manga-grid show-all-wrapper do-show-all">
			
			{{#each reading}}
			{{> manga-card manga=this toChapter=true}}
			{{/each}}

			<button class="show-all">Show <span class="more-count"></span> more</button>

		</div>
	</section>
	{{/if}}
	{{#each lists}}
	{{> list list=this}}
	{{/each}}
	{{#if popular}}
	<section class="section popular" data-list-id="popular" data-list-type="list">
		<h2 class="sub-title spread do-spread"><span>Popular right now</span> {{> list-type }}</h2>
		<div class="manga-grid">
		{{#each popular}}
			{{>manga-card manga=this}}
		{{/each}}
		</div>
	</section>
	{{/if}}

</div>

<script src="/js_compiled/pages/home.js"></script>
<script src="/js_compiled/reusable/lists.js"></script>
<script src="/js_compiled/reusable/list-type.js"></script>